<h1>Create New User</h1>
<form method="Post" action="/users" accept-charset="UTF-8" >
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div>
        <label for="article_username">Username:</label>
        <input type="text" id="article_username" name="article[username]">
    </div>
    <div>
        <label for="article_email">Email:</label>
        <input type="email" id="article_email" name="article[email]">
    </div>
    <div>
        <label for="article_password">Password:</label>
        <input type="password" id="article_password" name="article[password]">
    </div>
    <div>
        <input type="submit" value="Create User">
    </div>
</form>